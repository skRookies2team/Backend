# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=3306
DB_NAME=story_game
DB_USERNAME=root
DB_PASSWORD=your_database_password

# Python AI 서버 설정
AI_SERVER_URL=http://localhost:8000

# 서버 포트 (기본값: 8080)
SERVER_PORT=8080

# JPA 설정
# create: 매번 테이블 재생성
# update: 스키마 자동 업데이트 (개발용)
# validate: 스키마 검증만
# none: 아무것도 하지 않음 (운영용)
JPA_DDL_AUTO=update

# 로그 레벨 (TRACE, DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO
